.header {
	margin: 90rpx 0 90rpx 50rpx;
	border-bottom: 1px solid #ccc;
	text-align: center;
	width: 650rpx;
	height: 300rpx;
	line-height: 450rpx;
}

.header image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
}

.content {
	margin-left: 50rpx;
	margin-bottom: 90rpx;
	margin-right: 50rpx; 
}

.content view {
	margin-bottom: 30rpx;
}

.content text {
	display: inline-block;
	color: #9d9d9d;
	line-height: 50rpx;
}

.bottom {
	border-radius: 80rpx;
	margin: 70rpx 50rpx;
	font-size: 35rpx;
}

.phone {
	border-radius: 80rpx;
	margin: 70rpx 50rpx;
	font-size: 35rpx;
	background: #f2f2f2;
}

.nologin {
	border-radius: 80rpx;
